mixin experience(options)
    .row.experience-item
        .col-md-2.offset-md-3.col-3.offset-0.mb-5
            .experience-item-image
                a(href=options.href, target='_blank')
                    img.img-fluid(src=options.image, alt='')
        .col-md-5.col-8.offset-0.mb-5
            h4
                span.text-primary !{options.company} !{options.emoji}
                span.text-secondary !{options.title}
            h5.text-primary !{options.dates}
            p.experience-item-description !{options.description}
